{% extends 'baseFront.html.twig' %}
{% block contentblock %}
<style>
.custom-card {
    border-radius: 10px;
  
    box-shadow: 0px 0px 10px rgba(0, 0, 0, 0.2);
    margin: 10px;
    padding: 20px;
    display: inline-block;
    width: 90%;
    background-color: #232931;
    transition: box-shadow 0.2s ease-in-out;
}

.custom-card:hover {
    box-shadow: 0px 0px 20px rgba(0, 0, 0, 0.3);
    transform: translateY(-2px);
}

.custom-card h2 {
    margin-top: 0px;
    margin-bottom: 10px;
    font-size: 24px;
    color: #FFFFFF;
}

.custom-card p {
    margin-top: 0px;
    color: #FFFFFF;
}

.custom-card a {
    display: inline-block;
    margin-top: 10px;
    padding: 12px 20px;
    background-color: #AA336A;
    color: #FFFFFF;
    border-radius: 5px;
    text-decoration: none;
    transition: background-color 0.2s ease-in-out;
}

.custom-card a:hover {
    background-color: #0D6E72;
}

.custom-card img {
    width: 100%;
    height: 200px;
    object-fit: cover;
    border-radius: 5px;
    margin-bottom: 10px;
}

.pagination-container {
  display: flex;
  justify-content: center;
  align-items: center;
  font-family: Arial, sans-serif;
  font-size: 14px;
  color: #555;
}

.pagination-container a {
  display: inline-block;

  padding: 6px 10px;
  color: #555;
  text-decoration: none;
  border-radius: 20px;
  transition: all 0.2s ease-in-out;
  border: none;
  background-color: transparent;
}

.pagination-container a:hover {
  background-color: #f7f7f7;
  color: #333;
}

.pagination-container a.active {
  background-color: #333;
  color: #fff;
}



</style>
<section> 
<br>
<br>

<div class="container">
<h1>Offres</h1>
<form action="{{ path('app_mes_offres') }}" method="GET">
  <label for="search">Search:</label>
  <input type="text" id="search" name="q">
  <label for="criteria">Search by:</label>
  <select id="criteria" name="criteria">
    <option value="title">Title</option>
    <option value="type">type</option>
    <option value="category">Category</option>
  </select>
  <input type="submit" value="Search">
</form>



   <link rel="stylesheet" href="{{ asset('specialOrder.css') }}"/>
	
 

<div class="row">
{% for p in offresp %}
  <div class="col-sm-4">
    <div class="custom-card">
      <h2>{{ p.title }}</h2>
      <p>{{ p.description }}</p>
      <p>{{ p.category }}</p>
            
      <a href="{{ path('app_mes_postulations', {'id': p.idOffre}) }}">Voir Postulations</a>
        
    </div>
  </div>
  {% if loop.index % 3 == 0 %}
    </div><div class="row">
  {% endif %}
{% endfor %}
 <a href="{{ path('app_offre_new')}}">Ajouter une offre</a>
</div>
	
   <nav class="pagination-container">
    {{ knp_pagination_render(offresp) }}
</nav>
 
</div>
</section>

 
{% endblock %}