{% extends 'basefront.html.twig' %}

{% block title %}Transactions{% endblock %}

{% block contentblock %}
<center>
<h1>Mes Transactions</h1>
</center>
<div class="table-container">
<table>
    <thead>
        <tr>
            <th>Date</th>
            <th>Montant</th>
            <th>Type</th>
        </tr>
    </thead>
    <tbody>
        {% for transaction in forwarded %}
        <tr>
            <td>{{ transaction.date }}</td>
            <td>{{ transaction.montant }}</td>
            <td>Envoy√©</td>
        </tr>
        {% endfor %}
        {% for transaction in received %}
         <tr>
            <td>{{ transaction.date }}</td>
            
            <td>{{ transaction.montant }} $</td>
           {%if transaction.sendingWallet==999 %}
            <td>Depot</td>
            {% else %}
            <td>Recu</td>
            {% endif %}


        </tr>
        {% endfor %}
    </tbody>
</table>
</div>
<style>
.table-container {
  background-color: #f8d7da;
  border: 1px solid #dc3545;
  border-radius: 5px;
  padding: 10px;
  margin: 10px;
}

table {
  width: 100%;
  border-collapse: collapse;
  font-size: 14px;
}

th {
  background-color: #dc3545;
  color: #fff;
  font-weight: bold;
  text-align: left;
  padding: 10px;
  border: 1px solid #dc3545;
}

td {
  padding: 10px;
  border: 1px solid #dc3545;
}

tr:nth-child(even) {
  background-color: #f5f5f5;
}

tr:hover {
  background-color: #f1f1f1;
}
</style>
{% endblock %}