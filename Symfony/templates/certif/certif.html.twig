{% extends 'baseBack.html.twig' %}

{% block title %}Users List{% endblock %}

{% block contentblock %}
{% for message in app.flashes('info')%}
<div class="alert alert-success"> {{message}}
</div>
{% endfor %}

<div class="table-responsive">
<div class="d-flex flex-column-reverse">
<table class="table">
        <thead>
            <tr>
                
                
                <th>Name</th>
                <th>Description</th>
                <th>Badge</th>
                <th>Actions</th>
            </tr>
        </thead>
        <tbody>
        {% for certif in certif %}
            <tr>
                <td>{{ certif.nom }}</td>
                <td>{{ certif.descrip }}</td>
                <td><img src="{{ asset('' ~ certif.Badge) }}" alt="{{ certif.badge }}"></td>
                <td>
                <div style="display: flex; justify-content: space-between;">
                <a href="{{ path('app_certif_delete', {'id': certif.id}) }}">
                    <button type="button" class="btn btn-primary btn-rounded btn-fw">delete</button>
                    </a>
                    <a href="{{ path('app_certif_edit', {'id': certif.id}) }}">
                    <button type="button" class="btn btn-warning btn-rounded btn-fw">edit</button>
                    </a>
                    <a href="{{ path('app_test_create', {'id': certif.id}) }}">
                    <button type="button" class="btn btn-warning btn-rounded btn-fw">test create</button>
                    </a>
                </div>
                    
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="20">no records found</td>
            </tr>
        {% endfor %}
        <div class="mt-3 mb-5">
            {{ knp_pagination_render(certif) }}
        </div>
        </tbody>
    </table>
    <div class="ml-auto mb-3">
            <a href="{{ path('app_certifCreate') }}">
                <button type="button" class="btn btn-primary btn-rounded btn-icon" style="padding: 10px;"> Create Certif </button>
            </a>
        </div>
</div>
    
    </div>
    
{% endblock %}
