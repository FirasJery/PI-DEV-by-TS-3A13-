{% extends 'baseFront.html.twig' %}

{% block title %}Utilisateur{% endblock %}

{% block contentblock %}
    <h1>Utilisateur</h1>

    <table class="table">
        <tbody>
            <tr>
                <th>Id</th>
                <td>{{ utilisateur.id }}</td>
            </tr>
            <tr>
                <th>Email</th>
                <td>{{ utilisateur.email }}</td>
            </tr>
            <tr>
                <th>Roles</th>
                <td>{{ utilisateur.roles ? utilisateur.roles|json_encode : '' }}</td>
            </tr>
            <tr>
                <th>Password</th>
                <td>{{ utilisateur.password }}</td>
            </tr>
            <tr>
                <th>Name</th>
                <td>{{ utilisateur.name }}</td>
            </tr>
            <tr>
                <th>LastName</th>
                <td>{{ utilisateur.LastName }}</td>
            </tr>
            <tr>
                <th>UserName</th>
                <td>{{ utilisateur.UserName }}</td>
            </tr>
            <tr>
                <th>Role</th>
                <td>{{ utilisateur.role }}</td>
            </tr>
            <tr>
                <th>ImagePath</th>
                <td><img src="{{ asset('' ~ utilisateur.ImagePath) }}" alt="User Image"></td>
            </tr>
            {% if utilisateur.role == 'Freelancer' %} 
            <tr>
                <th>Bio</th>
                <td>{{ utilisateur.bio }}</td>
            </tr>
            <tr>
                <th>Experience</th>
                <td>{{ utilisateur.experience }}</td>
            </tr>
            <tr>
                <th>Education</th>
                <td>{{ utilisateur.education }}</td>
            </tr>
            <tr>
                <th>Total_jobs</th>
                <td>{{ utilisateur.totalJobs }}</td>
            </tr>
            <tr>
                <th>Rating</th>
                <td>{{ utilisateur.rating }}</td>
            </tr>
            {% endif %}
            {% if utilisateur.role == 'Entreprise' %} 
            <tr>
                <th>Domaine</th>
                <td>{{ utilisateur.domaine }}</td>
            </tr>
            <tr>
                <th>Info</th>
                <td>{{ utilisateur.info }}</td>
            </tr>
            <tr>
                <th>Location</th>
                <td>{{ utilisateur.location }}</td>
            </tr>
            <tr>
                <th>Nbe</th>
                <td>{{ utilisateur.nbe }}</td>
            </tr>
             {% endif %}
            <tr>
                <th>IsBanned</th>
                <td>{{ utilisateur.isBanned }}</td>
            </tr>
        </tbody>
    </table>

    <a href="{{ path('app_utilisateur_index') }}">back to list</a>

    <a href="{{ path('app_utilisateur_edit', {'id': utilisateur.id}) }}">edit</a>

    {{ include('utilisateur/_delete_form.html.twig') }}
{% endblock %}
