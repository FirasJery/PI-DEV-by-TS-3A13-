{% extends 'baseFront.html.twig' %}
{% block contentblock %}


   
<style>
.table {
  border-collapse: collapse;
  width: 100%;
  max-width: 800px;
  margin: 20px auto;
}

.table th,
.table td {
  padding: 10px;
  text-align: center;
  border: 1px solid #ddd;
}

.table th {
  background-color: #f2f2f2;
  font-weight: bold;
  text-transform: uppercase;
  font-size: 14px;
}

.table td {
  font-size: 14px;
}

.table td a {
  display: inline-block;
  padding: 5px 10px;
  background-color: #2196F3;
  color: #fff;
  text-decoration: none;
  border-radius: 5px;
  transition: background-color 0.3s ease;
}

.table td a:hover {
  background-color: #0D47A1;
}

</style>
    <table class="table">
        <thead>
            <tr>
                <th>IdPostulation</th>
                <th>Isaccepted</th>
                <th>actions</th>
            </tr>
        </thead>
        <tbody>
        {% for postulation in postulations %}
            <tr>
                <td>{{ postulation.idPostulation }}</td>
                <td>{{ postulation.isaccepted }}</td>
                <td>
              
                        {{ include('postulation/_delete_form.html.twig') }}
                 
                </td>
            </tr>
        {% else %}
            <tr>
                <td colspan="3">no records found</td>
            </tr>
        {% endfor %}
        </tbody>
    </table>


{% endblock %}
