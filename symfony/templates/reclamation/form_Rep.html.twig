<div class="form-container">
  {{ form_start(form, {'attr': {'novalidate': 'novalidate'}}) }}
  
  <div class="form-group">
    {{ form_label(form.description, 'Description') }}
    {{ form_widget(form.description, {'attr': {'class': 'form-control', 'placeholder': 'Enter description', 'style': 'height: 200px;'}}) }}
  </div>
  
  <button class="btn btn-primary">{{ button_label|default('Repondre') }}</button>
  {{ form_end(form) }}
</div>
