{% extends 'baseFront.html.twig' %}

{% block title %}Reclamation index{% endblock %}

{% block contentblock %}
 <section>
  <h1>Mes Reclamations</h1>
 
  <div class="table-container">
    <table class="table">
      <thead>
        <tr>
          <th>Description</th>
          <th>Type</th>
          <th>Etat</th>
          <th>Actions</th>
        </tr>
      </thead>
      <tbody>
        {% for reclamation in reclamations %}
          <tr>
            <td>{{ reclamation.description }}</td>
            <td>{{ reclamation.type }}</td>
            <td>
              {% if reclamation.etat == 0 %}
                <span class="badge badge-danger">Non ouverte</span>
              {% elseif reclamation.etat == 1 %}
                <span class="badge badge-danger">Non ouverte</span>
              {% else %}
                <span class="badge badge-success">Traité</span>
              {% endif %}
            </td>
            <td>
              <a href="{{ path('app_reclamation_show', {'id': reclamation.id}) }}" class="btn btn-primary">Show</a>
            </td>
          </tr>
        {% else %}
          <tr>
            <td colspan="4">No records found</td>
          </tr>
        {% endfor %}
      </tbody>
    </table>
  </div>
    <style>
    a.btn-voir-tous {
  display: inline-block;
  padding: 8px 16px;
  font-size: 14px;
  font-weight: bold;
  text-transform: uppercase;
  color: #fff;
  background-color: #dc3545;
  border: none;
  border-radius: 4px;
  transition: all 0.3s ease;
}

a.btn-voir-tous:hover {
  background-color: #c82333;
  text-decoration: none;
}
.table-container {
  background-color: #fff;
  border-radius: 10px;
  box-shadow: 0 0 10px rgba(0, 0, 0, 0.2);
  margin-bottom: 20px;
  overflow-x: auto;
}

.table {
  width: 100%;
  max-width: 100%;
  border-collapse: collapse;
  border-spacing: 0;
}

.table thead th {
  background-color: #d74b4b;
  color: #fff;
  font-weight: bold;
  padding: 12px 15px;
  text-align: left;
  border-bottom: 2px solid #d74b4b;
}

.table tbody tr {
  border-bottom: 1px solid #f2f2f2;
}

.table tbody td {
  padding: 12px 15px;
  vertical-align: middle;
}

.table tbody td:first-child {
  font-weight: bold;
}

.table tbody tr:hover {
  background-color: #f9f9f9;
}

.btn-primary {
  background-color: #d74b4b;
  border-color: #d74b4b;
  color: #fff;
  font-weight: bold;
}

.btn-primary:hover {
  background-color: #c43333;
  border-color: #c43333;
  color: #fff;
}

.btn-success {
  background-color: #28a745;
  border-color: #28a745;
  color: #fff;
  font-weight: bold;
}

.btn-success:hover {
  background-color: #218838;
  border-color: #218838;
  color: #fff;
}

.text-white {
  color: #fff;
}

.bg-red {
  background-color: #d74b4b;
}
.badge {
  font-size: 0.8rem;
  padding: 0.3rem 0.5rem;
  border-radius: 10px;
}

.badge-danger {
  background-color: #dc3545;
  color: #fff;
}

.badge-success {
  background-color: #28a745;
  color: #fff;
}
    </style>
    <a href="{{ path('app_reclamation_new') }}" class="btn-voir-tous">Nouvelle Réclamation</a>
    </section>
{% endblock %}