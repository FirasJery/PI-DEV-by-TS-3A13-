{% extends 'baseFront.html.twig' %}

{% block title %}Reponse{% endblock %}

{% block contentblock %}
<section>
  <div class="container my-5">
    <div class="row">
      <div class="col-md-8 mx-auto">
        <div class="card">
          <div class="card-header bg-danger text-white">
            <h3 class="mb-0">Réponse à la Réclamation</h3>
          </div>
          <div class="card-body">
            <div class="row">
              <div class="col-md-4 font-weight-bold">Description:</div>
              <div class="col-md-8">{{ reponse.description }}</div>
            </div>
            <hr>
            <div class="row">
              <div class="col-md-4 font-weight-bold">Répondu Par:</div>
              <div class="col-md-8">
                <div class="d-flex align-items-center">
                  <div class="rounded-circle bg-danger text-white px-2 py-1 mr-2">{{ user.Name}}</div>
                  <div>
                 
                  </div>
                    

                </div>
                <div class="text-muted">{{ user.Email }}</div>
              </div>
            </div>
          </div>
          <div class="card-footer text-center">
            <a href="{{ path('app_reclamation_index') }}" class="btn btn-secondary">Retour vers les Réclamations</a>
          </div>
        </div>
      </div>
    </div>
  </div>
</section>
{% endblock %}